<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    tools:context=".MainActivity">

       <TextView
           android:id="@+id/textView2"
           android:layout_width="172dp"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentTop="true"
           android:layout_alignParentEnd="true"
           android:layout_alignParentBottom="true"
           android:layout_marginStart="130dp"
           android:layout_marginLeft="150dp"
           android:layout_marginTop="80dp"
           android:layout_marginEnd="108dp"
           android:layout_marginBottom="606dp"
           android:text="FitFlow"
           android:textColor="#221010"
           android:textSize="34sp"
           android:textStyle="italic"
           tools:layout_editor_absoluteX="150dp"
           tools:layout_editor_absoluteY="31dp" />

       <ImageView
           android:id="@+id/imageView3"
           android:layout_width="268dp"
           android:layout_height="219dp"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="70dp"
           android:layout_marginLeft="70dp"
           android:layout_marginTop="200dp"
           android:layout_marginEnd="73dp"
           app:srcCompat="@drawable/capture"
           tools:layout_editor_absoluteX="82dp"
           tools:layout_editor_absoluteY="113dp" />

       <TextView
           android:id="@+id/textView4"
           android:layout_width="314dp"
           android:layout_height="93dp"
           android:layout_below="@+id/imageView3"
           android:layout_alignParentStart="true"
           android:layout_marginStart="37dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="21dp"
           android:text="Welcome to The Fit Flow"
           android:textColor="#1C1C1C"
           android:textSize="34sp"
           android:textStyle="bold"
           tools:layout_editor_absoluteX="52dp"
           tools:layout_editor_absoluteY="440dp" />

       <TextView
           android:id="@+id/textView5"
           android:layout_width="338dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView4"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="40dp"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="26dp"
           android:layout_marginEnd="33dp"
           android:text="Shape Your Life With Us.."
           android:textColor="#1C1C1C"
           android:textSize="25dp"
           android:textStyle="bold"
           tools:layout_editor_absoluteX="52dp"
           tools:layout_editor_absoluteY="440dp" />

       <Button
           android:id="@+id/btnNext"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/textView5"
           android:layout_alignParentStart="true"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="112dp"
           android:layout_marginLeft="60dp"
           android:layout_marginTop="58dp"
           android:layout_marginEnd="120dp"
           android:backgroundTint="@color/black"
           android:text="NEXT"
           android:textColor="#E5E7ED"
           android:textColorLink="#3F51B5"
           android:textSize="16sp"
           tools:layout_editor_absoluteX="78dp"
           tools:layout_editor_absoluteY="565dp" />

</RelativeLayout>